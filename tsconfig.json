{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "outFile": "./dist/index",
        "declaration": true,
        "emitDeclarationOnly": true,
        "module": "CommonJS",
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true 
    },
    "include": [
        "src/types.js",
    ],
    "exclude": [
        "node_modules",
    ]
}